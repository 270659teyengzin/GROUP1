package car;
import java.util.Scanner;
public class SALE {
	public static void main(String[] args) {
		int number;
		int type;
		int level;
		int price;
		int phone;
		int pick;
	Scanner scan=new Scanner(System.in);
	//1.
	System.out.println("Welcome to Car Online Sales Platform");
	System.out.println("Please enter your name:");
	String name=scan.nextLine();
	System.out.println("Please enter your phone number:");
	phone=scan.nextInt();
	System.out.println("What kind of vehicle do you want to browse?(Please enter the number of the type.)");
	System.out.println("1.Car");
	System.out.println("2.MPV");
	System.out.println("3.SUV");
	System.out.println("4.Sports Car");
	System.out.println("5.Truck");
	number=scan.nextInt();
	if(number<1^number>5) {
		System.out.println("Error,Please enter again:");
	}else
switch(number) {
case 5:
			System.out.println("Here are the following types of Truck to choose from");
			System.out.println("1.FAW Heavy truck");
			System.out.println("2.IVECO");
			System.out.println("3.SGMW");
			System.out.println("Please select the truck you want to know");
			type=scan.nextInt();
			switch(type) {
			case 3:
				System.out.println("SGMW:");
				System.out.println("1.Low-level version:27,000RM");
				System.out.println("2.Premium version:40,000RM");
				level=scan.nextInt();
				switch(level) {
				case 1:
					price=27000;
					System.out.println("Final price is:"+price);
