//270659 Tey Eng Zin
package MotorcycleRentalSystem;

import java.util.Scanner;

public class MRS2 {

	public static void main(String[] args) {	
		Scanner input = new Scanner(System.in);

		//Greeting
		System.out.println("Welcome to the Zin's Motorcycle Rental System!");
		System.out.println();
		
		System.out.println("Please enter your personal details");
		System.out.println();

		System.out.print("Enter your name: ");
		String name1 = input.nextLine();
		System.out.print("Enter your NRIC: ");
		String nric1 = input.nextLine();
		System.out.print("Enter your phone number: ");
		String phonenum1 = input.nextLine();
		System.out.print("Enter your email address: ");
		String email1 = input.nextLine();		
		System.out.println();
		
		//Display packages
		System.out.println("\t -----------Packages----------");
		System.out.println();
		System.out.println("\t Scooters 110-125cc for Town Only\n1 Day Only = RM40 Per Day\n2-6 Days = RM38 Per Day\nWeekly = RM248 Per Week");
		System.out.println();
		
		System.out.println("\t Semi Auto 110CC for Long Distance\n1 Day Only = RM50 Per Day\n2-6 Days = RM40 Per Day\nWeekly = RM260 Per Week");
		System.out.println();

		System.out.println("\t Semi Auto 125CC for Long Distance\n1 Day Only = RM50 Per Day\n2-6 Days = RM45 Per Day\nWeekly = RM280 Per Week");
		System.out.println();

		System.out.println("\t Semi Auto 150CC for Long Distance\n1 Day Only = RM65 Per Day\n2-6 Days = RM60 Per Day\nWeekly = RM400 Per Week");
		System.out.println();
		
		System.out.println("---------------------------------------------------------");
		System.out.println("Refer to the packages, please enter the following details");
		System.out.println();
		
		System.out.print("Model: ");
		String model = input.nextLine();
		
		System.out.print("Enter the rental date (dd/mm/yy): ");
		String rental1 = input.nextLine();
		
		System.out.print("Enter the return date (dd/mm/yy): ");
		String return1 = input.nextLine();
		
		System.out.print("Enter the rental days: ");
		double duration1 = input.nextDouble();
		
		System.out.print("Price: RM");
		double price1 = input.nextDouble();
		double total = price1*duration1;
		double discount1 = total*0.10;
		double totalprice = total - discount1;
		System.out.println("Total: RM" + totalprice);
		
		
		System.out.println();
		System.out.println("\t -----------Done----------");
		System.out.println("Name : " + name1 + "\nNRIC : " + nric1 + "\nPhone Number : " + phonenum1 + "\nEmail Address : " + email1 + "\nTotal payment : RM" + totalprice);
		System.out.println();
		System.out.println("Thank you, see you on that day!");

	}

}

